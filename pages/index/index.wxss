/**index.wxss**/
.movies .latestNews{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.movies .movieBox{
  width: 100%;
  height: 300rpx;
  border-top:1px solid #ccc; 
  padding: 15px;
  box-sizing: border-box;
  display: flex;
}
.movies .movieBox:nth-child(1){
  border-top:0; 
}
.movies .movPic{
  width: 180rpx;
  height: 100%;
  margin-right: 20px;
}
.movies .movText{
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  padding-top: 10rpx;
  box-sizing: border-box;
}
.movies .movText .title{
  color:#aaa;
}
.movies .movText .titLimit{
  display: inline-block;
  vertical-align: top;
  width: 300rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.movies .movText .detail{
  float: right;
  color: skyblue;
  margin-top: -15rpx;
}
.movies .noData{
  text-align: center;
  color: #aaa;
  margin-top: 50%;
}